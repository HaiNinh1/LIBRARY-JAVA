<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="192.0" prefWidth="260.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.controller.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="25.0" spacing="10">
            <Label style="-fx-font-size: 24;" text="Login" />
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button onAction="#handleLogin" text="Login" />
            <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
        </VBox>
    </children>
</AnchorPane>
